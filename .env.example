# Environment
NODE_ENV=development

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=calisthenics
DB_PASSWORD=calisthenics_dev_password
DB_NAME=calisthenics_db

# Backend API
API_PORT=5000
API_URL=http://localhost:5000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000

# Redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Email (für Newsletter & Notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway (z.B. Stripe)
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# AWS (für S3 - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=calisthenics-bucket
AWS_REGION=eu-central-1

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Admin Email
ADMIN_EMAIL=admin@calisthenics-hub.com

# App Settings
APP_NAME=Calisthenics Hub
APP_VERSION=1.0.0
